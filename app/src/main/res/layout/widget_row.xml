<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/widget_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/note_notif_iv"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_attach_file_24dp" />

    <TextView
        android:id="@+id/note_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/note_notif_iv"
        android:textColor="@color/primary_text"
        android:textIsSelectable="false"
        android:textSize="16sp"
        tools:text="Titre" />

    <TextView
        android:id="@+id/note_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/note_title_tv"
        android:layout_toStartOf="@id/note_notif_iv"
        android:maxLines="2"
        android:textColor="@color/secondary_text"
        android:textIsSelectable="false"
        android:textSize="14sp"
        tools:text="Content" />

</RelativeLayout>