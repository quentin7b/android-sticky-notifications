<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="vertical"
    tools:parentTag="LinearLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp">

        <ImageView
            android:id="@+id/title_ico"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingEnd="48dp"
            android:paddingLeft="0dp"
            android:paddingRight="48dp"
            android:paddingStart="0dp"
            android:src="@drawable/ic_attach_file_24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/title_ico"
            android:layout_toRightOf="@id/title_ico"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/note_title_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:hint="@string/hint_details"
                    android:textColor="@color/primary_text" />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

    </RelativeLayout>
    <!-- END : Notification CB -->

    <!-- STA : Notification CB -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp">

        <ImageView
            android:id="@+id/notification_ico"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingEnd="48dp"
            android:paddingLeft="0dp"
            android:paddingRight="48dp"
            android:paddingStart="0dp"
            android:src="@drawable/ic_attach_file_24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/notification_ico"
            android:layout_toRightOf="@id/notification_ico"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/notification_cb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/notification_cb"
                android:layout_toStartOf="@id/notification_cb"
                android:text="@string/hint_notification"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>
    <!-- END : Notification CB -->

    <!-- STA : Color BTN -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp">

        <ImageView
            android:id="@+id/level_ico"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingEnd="48dp"
            android:paddingLeft="0dp"
            android:paddingRight="48dp"
            android:paddingStart="0dp"
            android:src="@drawable/ic_color_lens_24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/level_ico"
            android:layout_toRightOf="@id/level_ico"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <com.github.quentin7b.sn.ui.view.DefconImageButton
                android:id="@+id/level_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/level_btn"
                android:layout_toStartOf="@id/level_btn"
                android:text="@string/hint_color"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>
    <!-- END : Color BTN -->

    <!-- STA : Desc TXT -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp">

        <ImageView
            android:id="@+id/content_ico"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingEnd="48dp"
            android:paddingLeft="0dp"
            android:paddingRight="48dp"
            android:paddingStart="0dp"
            android:src="@drawable/ic_short_text_24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/content_ico"
            android:layout_toRightOf="@id/content_ico"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/note_content_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:hint="@string/hint_details"
                    android:textColor="@color/primary_text" />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

    </RelativeLayout>

</merge>