<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_slidingpane"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <!-- Left side pane. (Master) -->
    <fragment
        android:id="@+id/notes_fragment"
        android:name="fr.quentinklein.stickynotifs.ui.fragments.NotesListFragment_"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_weight="1"
        tools:layout="@layout/fragment_list_notes" />

    <!-- Right side page. (Slave)  -->
    <fragment
        android:id="@+id/note_fragment"
        android:name="fr.quentinklein.stickynotifs.ui.fragments.NoteFragment_"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="2"
        tools:layout="@layout/fragment_note" />

</LinearLayout>