<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Sticky" parent="Base.Theme.Sticky" />

    <style name="Base.Theme.Sticky" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="actionOverflowMenuStyle">@style/Base.Theme.Sticky.ActionOverflowMenu</item>
    </style>

    <style name="Base.Theme.Sticky.ActionOverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/windowBackground</item>
    </style>

</resources>