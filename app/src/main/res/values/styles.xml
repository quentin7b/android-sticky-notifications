<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Sticky" parent="Base.Theme.Sticky" />

    <style name="Base.Theme.Sticky" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighLight</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="actionOverflowMenuStyle">@style/Base.Theme.Sticky.ActionOverflowMenu</item>
        <item name="android:actionOverflowButtonStyle">
            @style/Base.Theme.Sticky.ActionOverflowButton
        </item>
    </style>

    <style name="Base.Theme.Sticky.ActionOverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/windowBackground</item>
    </style>

    <style name="Base.Theme.Sticky.ActionOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_white_32dp</item>
    </style>

    <style name="Base.Theme.Sticky.Switch.Blue" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorUseless</item>
    </style>

    <style name="Base.Theme.Sticky.Switch.Green" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorNormal</item>
    </style>

    <style name="Base.Theme.Sticky.Switch.Orange" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorImportant</item>
    </style>

    <style name="Base.Theme.Sticky.Switch.Red" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorUltra</item>
    </style>
</resources>